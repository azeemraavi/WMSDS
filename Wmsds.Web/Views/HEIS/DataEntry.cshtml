@model Wmsds.Web.Models.HEISDataEntryDto

@section styles{
    <!-- Include SmartWizard CSS -->
    <link href="../content/assets/plugins/smart-wizard/css/smart_wizard.css" rel="stylesheet" type="text/css" />
    <!-- Optional SmartWizard theme -->
    <link href="../content/assets/css/pages/smart-wizard/smart_wizard_theme_circles.css" rel="stylesheet" type="text/css" />
    <link href="../content/assets/css/pages/smart-wizard/smart_wizard_theme_arrows.css" rel="stylesheet" type="text/css" />
    <link href="../content/assets/css/pages/smart-wizard/smart_wizard_theme_dots.css" rel="stylesheet" type="text/css" />

}
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">HEIS</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">DataEntry</li>
                </ol>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="card card-topline-aqua">
                <div class="card-head">
                    <header>HEIS Identification</header>
                    <div class="tools">
                        <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                        <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                        <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <b>
                                    Farmer Name:&nbsp;&nbsp;&nbsp;
                                </b> @Model.HeisIdentification.FarmerName
                            </div>
                            <div><b>Farmer CNIC: &nbsp;&nbsp;&nbsp;</b> @Model.HeisIdentification.FarmerCNIC</div>
                            
                        </div>
                        <div class="col-md-6">

                            <div><b>District:&nbsp;&nbsp;&nbsp; </b> @Model.HeisIdentification.DistrictName </div>
                            <div><b>Tehsil:&nbsp;&nbsp;&nbsp; </b>  @Model.HeisIdentification.TehsilName </div>
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- add content here -->
        <div class="container">
            <form class="form-inline wizard-form">
                <div class="form-group" style="display:none;">
                    <label>Choose Theme:</label>
                    <select id="theme_selector" class="form-control">
                        <option value="arrows" selected>arrows</option>
                        <option value="default">default</option>

                        <option value="circles">circles</option>
                        <option value="dots">dots</option>
                    </select>
                </div>
            </form>
            <br />

            <!-- SmartWizard html -->
            <div id="smartwizard">
                <ul>
                    <li><a href="#step-1">Step 1<br /><small>Basic Information</small></a></li>
                    <li><a href="#step-2">Step 4<br /><small>Works Executed</small></a></li>
                </ul>
                <div>
                    <div id="step-1" class="">
                        <form id="frmBasicInformation" name="frmBasicInformation">
                            <input type="hidden" id="hdHeisIdentificationIdBI" name="hdHeisIdentificationIdBI" value="@Model.HeisIdentification.Id">
                            <input type="hidden" id="hdHeisIdentificationDetailsIdBI" name="hdHeisIdentificationDetailsIdBI" value="@Model.HeisIdentificationDetail.Id">
                            <fieldset>
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <!-- text input -->
                                            <div class="form-group">
                                                <label>Latitude</label>
                                                @Html.TextBox("txtLatitude", Model.HeisIdentificationDetail.Latitude,
                                               new { @class = "form-control", @id = "txtLatitude", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Longitude </label>
                                                @Html.TextBox("txtLongitude", Model.HeisIdentificationDetail.Longitude, new
                                                {
                                                    @class = "form-control"
                                               ,
                                                    @id = "txtLongitude",
                                                    @placeholder = "",
                                                    required = "required",
                                               type = "number"
                                           })

                                            </div>
                                            <div class="form-group">
                                                <label>Installation Type</label>
                                                <select id="ddlInstallationType" name="ddlInstallationType" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Regular">Regular</option>
                                                    <option value="Extension">Extension</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Fiscal Year</label>
                                                <select id="ddlFiscalYear" name="ddlFiscalYear" class="form-control" required>
                                                    <option value="">--Select--</option>

                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>System Type</label>
                                                <select id="ddlSystemType" name="ddlSystemType" class="form-control" required>
                                                    <option value="">--Select--</option>

                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>SSC Name</label>
                                                <select id="ddlSSCName" name="ddlSSCName" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="4B Fertilizers">4B Fertilizers</option>
                                                    <option value="Aaban Nano Technologies">Aaban Nano Technologies</option>
                                                    <option value="Agri. Engineering Services">Agri. Engineering Services</option>
                                                    <option value="Agroten Traders">Agroten Traders</option>
                                                    <option value="Al-Ghazi Tractors Ltd.">Al-Ghazi Tractors Ltd.</option>
                                                    <option value="Ali Akbar">Ali Akbar</option>
                                                    <option value="Alpha Pipes">Alpha Pipes</option>
                                                    <option value="Anchor Commodities">Anchor Commodities</option>
                                                    <option value="Drip Irrigation System Co.">Drip Irrigation System Co.</option>
                                                    <option value="Eminent Engineering ">Eminent Engineering </option>
                                                    <option value="Falcon Traders">Falcon Traders</option>
                                                    <option value="Farm Dynamics">Farm Dynamics</option>
                                                    <option value="Haji Sons">Haji Sons</option>
                                                    <option value="HydroMech">HydroMech</option>
                                                    <option value="Innovators Engineering Co.">Innovators Engineering Co.</option>
                                                    <option value="Jaffar Brothers Ltd.">Jaffar Brothers Ltd.</option>
                                                    <option value="Manzoor Alam& Sons">Manzoor Alam& Sons</option>
                                                    <option value="Micro Drip">Micro Drip</option>
                                                    <option value="Mishaq Enterprises">Mishaq Enterprises</option>
                                                    <option value="New Tech">New Tech</option>
                                                    <option value="Orbit Links">Orbit Links</option>
                                                    <option value="Polo Aabyari">Polo Aabyari</option>
                                                    <option value="Royal Construction Co.">Royal Construction Co.</option>
                                                    <option value="Shad Abad">Shad Abad</option>
                                                    <option value="Sun International">Sun International</option>
                                                    <option value="Uni Drip">Uni Drip</option>
                                                    <option value="Valley Irrigation">Valley Irrigation</option>
                                                    <option value="Water CON">Water CON</option>
                                                    <option value="Zarkaasht (Dadex)">Zarkaasht (Dadex)</option>
                                                    <option value="Everest Plastics">Everest Plastics</option>
                                                    <option value="Royal Irrigation Systems">Royal Irrigation Systems</option>
                                                    <option value="Natural Resources Management Technologies">Natural Resources Management Technologies</option>
                                                    <option value="Agrex Enterprises">Agrex Enterprises</option>
                                                    <option value="Haji Sons International">Haji Sons International</option>
