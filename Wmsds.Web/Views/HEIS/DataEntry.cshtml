                                                    <option value="Tubewell">Tubewell</option>
                                                    <option value="Canal">Canal</option>
                                                    <option value="Canal+Tubewell">Canal+Tubewell</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Water Quality</label>
                                                <select class="form-control" id="ddlWaterQuality" name="ddlWaterQuality" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Fit">Fit</option>
                                                    <option value="Unfit">Unfit</option>
                                                    <option value="Marginally Fit">Marginally Fit</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Power Source</label>
                                                <select class="form-control" id="ddlPowerSource" name="ddlPowerSource" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Electric Motor">Electric Motor</option>
                                                    <option value="Diesel Engine">Diesel Engine</option>
                                                    <option value="Solar">Solar</option>
                                                    <option value="Tractor PTO">Tractor PTO</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Crop Category</label>
                                                <select class="form-control" id="ddlCropCategory" name="ddlCropCategory" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Row Crops">Row Crops</option>
                                                    <option value="Field Crops">Field Crops</option>
                                                    <option value="Orchard">Orchard</option>
                                                    <option value="Vegetables">Vegetables</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Crop Name</label>
                                                <select class="form-control" id="ddlCropCategory" name="ddlCropCategory" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Row Crops">Drop down from concerned Crop Category (attached)</option>

                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Plants per Acre (Nos.)</label>
                                                @Html.TextBox("txtPlansPerAcre", Model.HeisIdentificationDetail.PlansPerAcre, new
                                                {
                                                    @class = "form-control",
                                               @id = "txtPlansPerAcre",
                                                    @placeholder = "",
                                                    required = "required",
                                               type = "number"
                                           })
                                            </div>
                                            <div class="form-group">
                                                <label>System Classification</label>
                                                <select class="form-control" id="ddlSystemClassification" name="ddlSystemClassification" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Dripper">Dripper</option>
                                                    <option value="Inline Drip">Inline Drip</option>
                                                    <option value="Micro Sprinkler">Micro Sprinkler</option>
                                                    <option value="Spray Jet">Spray Jet</option>
                                                    <option value="Bubbler">Bubbler</option>
                                                    <option value="Rain Gun">Rain Gun</option>
                                                    <option value="Mini Sprinkler">Mini Sprinkler</option>
                                                    <option value="Center Pivot">Center Pivot</option>
                                                    <option value="Linear Move">Linear Move</option>
                                                    <option value="Reel">Reel</option>

                                                </select>
                                            </div>
                                            @*Design Parameters*@
                                            <div class="form-group">
                                                <label>Design approved</label>
                                                <select id="ddlWorkOrderIssued" name="ddlWorkOrderIssued" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="Yes">No</option>
                                                    <option value="Offered">Offered</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Design Approval Date </label>
                                                @Html.TextBox("txtDesignApprovalDate", Model.HeisIdentificationDetail.DesignApprovalDate,
                                               new { @class = "form-control", @id = "txtDesignApprovalDate", @placeholder = "", required = "required" })
                                            </div>

                                            <div class="form-group">
                                                <label>Total Approved Project Cost (Rs.) </label>
                                                @Html.TextBox("txtTotalApprovedProjectCost", Model.HeisIdentificationDetail.TotalApprovedProjectCost,
                                               new { @class = "form-control", @id = "txtTotalApprovedProjectCost", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label> Total Dynamic Head (meter)</label>
                                                @Html.TextBox("txtTotalDynamicHead", Model.HeisIdentificationDetail.TotalDynamicHead,
                                               new { @class = "form-control", @id = "txtTotalDynamicHead", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Pump Type</label>
                                                <select id="ddlImprovementType" name="ddlImprovementType" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Centrifugal">Centrifugal</option>
                                                    <option value="Submersible">Submersible</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Pump Flow Rate (LPS) </label>
                                                @Html.TextBox("txtPumpFlowRate", Model.HeisIdentificationDetail.PumpFlowRate,
                                               new { @class = "form-control", @id = "txtPumpFlowRate", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Power Source Efficiency (%) </label>
                                                @Html.TextBox("txtPowerSourceEfficiency", Model.HeisIdentificationDetail.PowerSourceEfficiency,
                                               new { @class = "form-control", @id = "txtPowerSourceEfficiency", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    
                    <div id="step-2" class="">
                        <form id="frmFCR" name="frmFCR">
                            <input type="hidden" id="hdHeisIdentificationIdFCR" name="hdHeisIdentificationIdFCR" value="@Model.HeisIdentification.Id">
                            <input type="hidden" id="hdHeisIdentificationDetailsIdFCR" name="hdHeisIdentificationDetailsIdFCR" value="@Model.HeisIdentificationDetail.Id">
                            <fieldset>
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="form-group">
                                                <label>Work Order Issued</label>
                                                <select id="ddlWorkOrderIssued" name="ddlWorkOrderIssued" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="Yes">No</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtWorkOrderIssueDate">Latitude</label>
                                                @Html.TextBox("txtWorkOrderIssueDate", Model.HeisIdentificationDetail.WorkOrderIssueDate,
                                               new
                                                    {
                                                        @class = "form-control",
                                                        @id = "txtWorkOrderIssueDate",
                                                        @placeholder = "",
                                                        required = "required"
                                                })
                                            </div>
                                            <div class="form-group">
                                                <label>Work Order Amount (Rs.) </label>
                                                @Html.TextBox("txtWorkOrderAmount", Model.HeisIdentificationDetail.WorkOrderAmount,
                                               new { @class = "form-control", @id = "txtWorkOrderAmount", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Work Order Amount (Rs.) </label>
                                                @Html.TextBox("txtWorkOrderAmount", Model.HeisIdentificationDetail.WorkOrderAmount,
                                               new { @class = "form-control", @id = "txtWorkOrderAmount", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Estimated Govt. Share (Rs.) </label>
                                                @Html.TextBox("txtEstimatedGovtShare", Model.HeisIdentificationDetail.EstimatedGovtShare,
                                               new { @class = "form-control", @id = "txtEstimatedGovtShare", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Estimated Famer Share (Rs.) </label>
                                                @Html.TextBox("txtEstimatedFamerShare", Model.HeisIdentificationDetail.EstimatedFamerShare,
                                               new { @class = "form-control", @id = "txtEstimatedFamerShare", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Farmer Share in Cash (Rs.) </label>
                                                @Html.TextBox("txtFarmerShareInCash", Model.HeisIdentificationDetail.FarmerShareInCash,
                                               new { @class = "form-control", @id = "txtFarmerShareInCash", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Farmer Share in Kind (Rs.) </label>
                                                @Html.TextBox("txtFarmerShareInKind", Model.HeisIdentificationDetail.FarmerShareInKind,
                                               new { @class = "form-control", @id = "txtFarmerShareInKind", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            <!-- Material Verification (ICR-I) -->

                                            <div class="form-group">
                                                <label>Material Verified</label>
                                                <select id="ddlImprovementType" name="ddlImprovementType" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                    <option value="Offered">Offered</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Material Verified Date</label>
                                                @Html.TextBox("txtMaterialVerifiedDate", Model.HeisIdentificationDetail.MaterialVerifiedDate,
                                               new { @class = "form-control", @id = "txtMaterialVerifiedDate", required = "required" })
                                            </div>

                                            <div class="form-group">
                                                <label>ICR-I Amount Verified (Rs.)</label>
                                                @Html.TextBox("txtICRIAmountVerified", Model.HeisIdentificationDetail.ICRIAmountVerified,
                                               new { @class = "form-control", @id = "ICRIAmountVerified", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>Commissioning Verification</label>
                                                <select id="ddlCommissioningVerification" name="ddlCommissioningVerification" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                    <option value="Offered">Offered</option>
                                                    <option value="Deferred">Deferred</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>ICR-I Amount Verified (Rs.)</label>
                                                @Html.TextBox("txtICRIAmountVerified", Model.HeisIdentificationDetail.ICRIAmountVerified,
                                               new { @class = "form-control", @id = "ICRIAmountVerified", required = "required", type = "number" })
                                            </div>

                                            <div class="form-group">
                                                <label>Commissioning Verification Date</label>
                                                @Html.TextBox("txtCommissioningVerificationDate", Model.HeisIdentificationDetail.CommissioningVerificationDate,
                                               new { @class = "form-control", @id = "txtFCRDropStructure", required = "required" })
                                            </div>

                                            <div class="form-group">
                                                <label> Total Scheme Cost Verified (Rs.)</label>
                                                @Html.TextBox("txtTotalSchemeCostVerified", Model.HeisIdentificationDetail.TotalSchemeCostVerified,
                                               new { @class = "form-control", @id = "txtTotalSchemeCostVerified", @placeholder = "", required = "required", type = "number" })
                                            </div>

                                            <div class="form-group">
                                                <label>ICR-II Amount Verified (Rs.) </label>
                                                @Html.TextBox("txtICRIIAmountVerified", Model.HeisIdentificationDetail.ICRIIAmountVerified,
                                               new { @class = "form-control", @id = "txtICRIIAmountVerified", @placeholder = "", required = "required", type = "number" })
                                            </div>
                                            <div class="form-group">
                                                <label>ICR-III Verification</label>
                                                <select id="ddlCommissioningVerification" name="ddlCommissioningVerification" class="form-control" required>
                                                    <option value="">--Select--</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                    <option value="Offered">Offered</option>

                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label> Total Amount Verified (Rs.)</label>
                                                @Html.TextBox("txtTotalAmountVerified", Model.HeisIdentificationDetail.TotalAmountVerified,
                                               new { @class = "form-control", @id = "txtTotalAmountVerified", @placeholder = "", required = "required", type = "number" })
                                            </div>

                                            <div class="form-group">
                                                <label>ICR-III Qualifying Date </label>
                                                @Html.TextBox("txtICRIIIQualifyingDate", Model.HeisIdentificationDetail.ICRIIIQualifyingDate,
                                               new { @class = "form-control", @id = "txtICRIIIQualifyingDate", @placeholder = "", required = "required", type = "number" })
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
