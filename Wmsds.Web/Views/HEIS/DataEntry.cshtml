                                        <div class="col-md-6 col-sm-6">

                                            <div class="form-group">
                                                <label>Village Name/Number</label>
                                                @Html.TextBox("txtVillageName", Model.HeisIdentificationDetail.VillageName,
                                               new
                                                    {
                                                        @class = "form-control",
                                                        @id = "txtVillageName",
